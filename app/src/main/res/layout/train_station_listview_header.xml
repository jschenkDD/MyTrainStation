<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/lists_padding"
        android:text="@string/gps_location_default_display_text"
        android:textAppearance="@android:style/TextAppearance.Material.Large"/>

    <SeekBar
        android:id="@+id/sb_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_location"
        android:max="200"
        android:min="0"
        android:minHeight="30dp"
        android:progress="0"/>

    <TextView
        android:id="@+id/tv_search_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_radius"
        android:gravity="center"
        android:paddingBottom="@dimen/lists_padding"
        android:text="@string/search_radius_default_text"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

</RelativeLayout>